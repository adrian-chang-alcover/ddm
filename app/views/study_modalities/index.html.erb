<%- model_class = StudyModality -%>
<div class="page-header">
  <h1>Modalidades de Estudio</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:short_name) %></th>
      <th><%= model_class.human_attribute_name(:full_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @study_modalities.each do |study_modality| %>
      <tr>
        <td><%= link_to study_modality.id, study_modality_path(study_modality) %></td>
        <td><%= study_modality.short_name %></td>
        <td><%= study_modality.full_name %></td>
        <td><%=l study_modality.created_at %></td>
        <td>
          <% if can? :update, study_modality %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_study_modality_path(study_modality), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, study_modality %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        study_modality_path(study_modality),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, StudyModality %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_study_modality_path,
              :class => 'btn btn-primary' %>
<% end %>
