<h1>Listing study_modalities</h1>

<table>
  <thead>
    <tr>
      <th>Short name</th>
      <th>Full name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_modalities.each do |study_modality| %>
      <tr>
        <td><%= study_modality.short_name %></td>
        <td><%= study_modality.full_name %></td>
        <td><%= link_to 'Show', study_modality %></td>
        <td><%= link_to 'Edit', edit_study_modality_path(study_modality) %></td>
        <td><%= link_to 'Destroy', study_modality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

