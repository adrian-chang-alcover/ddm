<%- model_class = Semester -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @semester.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year_id) %>:</strong></dt>
  <dd><%= @semester.year_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weeks) %>:</strong></dt>
  <dd><%= @semester.weeks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:begin_date) %>:</strong></dt>
  <dd><%= @semester.begin_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
  <dd><%= @semester.end_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              semesters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_semester_path(@semester), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              semester_path(@semester),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
