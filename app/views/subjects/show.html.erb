<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
  <dd><%= @subject.short_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @subject.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discipline_id) %>:</strong></dt>
  <dd><%= @subject.discipline_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:semester_id) %>:</strong></dt>
  <dd><%= @subject.semester_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_hours) %>:</strong></dt>
  <dd><%= @subject.class_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:evaluation_type_id) %>:</strong></dt>
  <dd><%= @subject.evaluation_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:practical_hours) %>:</strong></dt>
  <dd><%= @subject.practical_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:curriculum_type_id) %>:</strong></dt>
  <dd><%= @subject.curriculum_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dictum_or_resoluteness) %>:</strong></dt>
  <dd><%= @subject.dictum_or_resoluteness %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              subjects_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_path(@subject), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              subject_path(@subject),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
