<%= form_for @local, :html => { :class => "form-horizontal local" } do |f| %>

    <% if @local.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@local.errors.count, "error") %> prohibited this local from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @local.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@local[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :capacity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :capacity, :class => 'form-control' %>
    </div>
    <%= error_span(@local[:capacity]) %>
  </div>
  <div class="control-group">
    <%= f.label :faculty_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :faculty_id, :class => 'form-control' %>
    </div>
    <%= error_span(@local[:faculty_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            schedule_locals_path, :class => 'btn btn-default' %>

<% end %>
