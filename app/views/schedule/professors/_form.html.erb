<%= form_for @professor, :html => { :class => "form-horizontal professor" } do |f| %>

    <% if @professor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@professor.errors.count, "error") %> prohibited this professor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @professor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@professor[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@professor[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :scientific_degree_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :scientific_degree_id, :class => 'form-control' %>
    </div>
    <%= error_span(@professor[:scientific_degree_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :docent_category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :docent_category_id, :class => 'form-control' %>
    </div>
    <%= error_span(@professor[:docent_category_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :faculty_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :faculty_id, :class => 'form-control' %>
    </div>
    <%= error_span(@professor[:faculty_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            schedule_professors_path, :class => 'btn btn-default' %>

<% end %>
