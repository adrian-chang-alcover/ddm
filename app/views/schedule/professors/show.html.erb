<%- model_class = Professor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @professor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @professor.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scientific_degree_id) %>:</strong></dt>
  <dd><%= @professor.scientific_degree_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docent_category_id) %>:</strong></dt>
  <dd><%= @professor.docent_category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:faculty_id) %>:</strong></dt>
  <dd><%= @professor.faculty_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schedule_professors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_professor_path(@professor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_professor_path(@professor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
