<%- model_class = Schedule::DocentDay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:day) %>:</strong></dt>
  <dd><%= @docent_day.day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docent_week_id) %>:</strong></dt>
  <dd><%= @docent_day.docent_week_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schedule_docent_days_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_docent_day_path(@docent_day), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_docent_day_path(@docent_day),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
