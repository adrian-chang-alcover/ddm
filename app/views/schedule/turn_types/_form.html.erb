<%= form_for @turn_type, :html => { :class => "form-horizontal turn_type" } do |f| %>

    <% if @turn_type.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@turn_type.errors.count, "error") %> prohibited this turn_type from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @turn_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'form-control' %>
    </div>
    <%= error_span(@turn_type[:short_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :full_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_name, :class => 'form-control' %>
    </div>
    <%= error_span(@turn_type[:full_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            schedule_turn_types_path, :class => 'btn btn-default' %>

<% end %>
