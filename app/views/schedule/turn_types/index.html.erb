<h1>Listing schedule_turn_types</h1>

<table>
  <thead>
    <tr>
      <th>Short name</th>
      <th>Full name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_turn_types.each do |schedule_turn_type| %>
      <tr>
        <td><%= schedule_turn_type.short_name %></td>
        <td><%= schedule_turn_type.full_name %></td>
        <td><%= link_to 'Show', schedule_turn_type %></td>
        <td><%= link_to 'Edit', edit_schedule_turn_type_path(schedule_turn_type) %></td>
        <td><%= link_to 'Destroy', schedule_turn_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

