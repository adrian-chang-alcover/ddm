<%- model_class = DocentWeek -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:first_day) %></th>
      <th><%= model_class.human_attribute_name(:year_id) %></th>
      <th><%= model_class.human_attribute_name(:semester_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @docent_weeks.each do |docent_week| %>
      <tr>
        <td><%= link_to docent_week.id, schedule_docent_week_path(docent_week) %></td>
        <td><%= docent_week.number %></td>
        <td><%= docent_week.first_day %></td>
        <td><%= docent_week.year_id %></td>
        <td><%= docent_week.semester_id %></td>
        <td><%=l docent_week.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_schedule_docent_week_path(docent_week), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      schedule_docent_week_path(docent_week),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_schedule_docent_week_path,
            :class => 'btn btn-primary' %>
