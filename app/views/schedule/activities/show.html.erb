<%- model_class = Schedule::Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:professor_id) %>:</strong></dt>
  <dd><%= @activity.professor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_id) %>:</strong></dt>
  <dd><%= @activity.subject_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @activity.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_id) %>:</strong></dt>
  <dd><%= @activity.local_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docent_day_id) %>:</strong></dt>
  <dd><%= @activity.docent_day_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turn_id) %>:</strong></dt>
  <dd><%= @activity.turn_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turn_type_id) %>:</strong></dt>
  <dd><%= @activity.turn_type_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              schedule_activities_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_activity_path(@activity), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_activity_path(@activity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
