      <%= f.text_field :turn_type_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:turn_type_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            schedule_activities_path, :class => 'btn btn-default' %>

<% end %>
