<%= form_for @activity, :html => { :class => "form-horizontal activity" } do |f| %>

    <% if @activity.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @activity.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :professor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :professor_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:professor_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :subject_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:subject_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :group_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :group_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:group_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :local_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :local_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:local_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :docent_day_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :docent_day_id, :class => 'form-control' %>
    </div>
    <%= error_span(@activity[:docent_day_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :turn_id, :class => 'control-label' %>
