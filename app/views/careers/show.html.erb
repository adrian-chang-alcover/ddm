<%- model_class = Career -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
  <dd><%= @career.short_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
  <dd><%= @career.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:faculty_id) %>:</strong></dt>
  <dd><%= @career.faculty_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:study_modality) %>:</strong></dt>
  <dd><%= @career.study_modality.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:headquarters) %>:</strong></dt>
  <dd><%= @career.headquarters ? 'si' : 'no' %></dd>
</dl>

<div class="panel panel-default">
   <div class="panel-heading">Centros hom√≥logos</div>
   <div class="row panel-body">
     <% @career.universities.each do |univ| %>
       <div class="col-sm-4"><%= univ.full_name %></div>
     <% end %>
   </div>
</div>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              careers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_career_path(@career), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              career_path(@career),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
