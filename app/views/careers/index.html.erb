<%- model_class = Career -%>
<div class="page-header">
  <h1>Carreras</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:short_name) %></th>
      <th><%= model_class.human_attribute_name(:full_name) %></th>
      <th><%= model_class.human_attribute_name(:faculty_id) %></th>
      <th><%= model_class.human_attribute_name(:study_modality) %></th>
      <th><%= model_class.human_attribute_name(:headquarters) %></th>
      <th><%= model_class.human_attribute_name(:universities) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= link_to career.id, career_path(career) %></td>
        <td><%= career.short_name %></td>
        <td><%= career.full_name %></td>
        <td><%= career.faculty.name %></td>
        <td><%= career.study_modality.full_name %></td>
        <td><%= career.headquarters ? 'si' : 'no' %></td>
        <td><%= career.universities.count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_career_path(career), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      career_path(career),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_career_path,
            :class => 'btn btn-primary' %>
