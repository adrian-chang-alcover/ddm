<%- model_class = CurriculumType -%>
<div class="page-header">
  <h1>Tipos de Curr√≠culos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @curriculum_types.each do |curriculum_type| %>
      <tr>
        <td><%= link_to curriculum_type.id, curriculum_type_path(curriculum_type) %></td>
        <td><%= curriculum_type.name %></td>
        <td><%=l curriculum_type.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_curriculum_type_path(curriculum_type), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      curriculum_type_path(curriculum_type),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_curriculum_type_path,
            :class => 'btn btn-primary' %>
