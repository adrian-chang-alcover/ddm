<%= form_for @faculty, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :full_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_name, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :dean, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :dean, :class => 'text_field' %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :university_id, nil, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :university_id, options_from_collection_for_select(University.all, :id, :full_name, @faculty.university ? @faculty.university.id : nil) %>
    </div>
  </div>  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                faculties_path, :class => 'btn' %>
  </div>
<% end %>
